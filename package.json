{
  "devDependencies": {
    "codecov": "^2.2.0",
    "commitizen": "^2.9.6",
    "cz-lerna-changelog": "^1.2.1",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lerna": "^2.0.0",
    "lerna-semantic-release": "^9.1.0",
    "lint-staged": "^4.0.2",
    "prettier-eslint-cli": "^4.0.4",
    "validate-commit-msg": "^2.13.0"
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "clean": "lerna clean",
    "coverage": "codecov",
    "test": "jest",
    "commitmsg": "validate-commit-msg",
    "commit": "git-cz",
    "semantic-release": "lerna-semantic-release pre && lerna-semantic-release post && lerna-semantic-release perform",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "jest --findRelatedTests",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    },
    "validate-commit-msg": {
      "scope": {
        "required": false,
        "validate": false
      },
      "helpMessage": "\nðŸ“¦:ðŸ› âœ¨ðŸ’¥  Continuos semantic release ahead\nDon't worry, we'll walk you through...\nJust type 'npm run commit' instead of 'git commit'"
    }
  },
  "jest": {
    "rootDir": "packages",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
